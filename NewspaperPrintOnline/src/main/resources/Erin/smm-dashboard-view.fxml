<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.simulatingnewspaper.SMMDashboardController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="welcomeLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Welcome, Social Media Manager!" />

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Create Post (Goal 2)">
                <VBox spacing="10.0">
                    <GridPane hgap="10" vgap="10">
                        <Label text="Platform:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <ComboBox fx:id="platformCombo" promptText="Select Platform" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        <Label text="Content:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextArea fx:id="contentArea" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    </GridPane>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label fx:id="postMessageLabel" textFill="GREEN" />
                        <Button text="Create New Post" onAction="#onCreateNewPost" />
                    </HBox>
                    <Separator />
                    <Button text="Promote Article (Goal 5 - NOT IMPLEMENTED HERE)" disable="true" />
                </VBox>
            </Tab>
            <Tab text="View All Posts (Goal 1 &amp; 8)">
                <VBox spacing="10.0">
                    <Label style="-fx-font-weight: bold;" text="All Logged Social Media Posts (Goal 8)" />
                    <TableView fx:id="postsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="platformCol" text="Platform" />
                            <TableColumn fx:id="dateCol" text="Date" />
                            <TableColumn fx:id="engagementCol" text="Total Engagement (Goal 1)" />
                        </columns>
                    </TableView>
                    <Button text="Respond to Comments (Goal 4 - NOT IMPLEMENTED HERE)" disable="true" />
                </VBox>
            </Tab>
            <Tab text="Analytics (Goal 3)">
                <VBox spacing="10.0">
                    <Button text="View Analytics" onAction="#onViewAnalytics" />
                    <BarChart fx:id="analyticsChart" title="Total Engagement by Platform" VBox.vgrow="ALWAYS">
                        <xAxis><CategoryAxis label="Platform" /></xAxis>
                        <yAxis><NumberAxis label="Engagement (Likes+Shares+Comments)" /></yAxis>
                    </BarChart>
                    <Button text="Generate Monthly Report (Goal 7 - NOT IMPLEMENTED HERE)" disable="true" />
                </VBox>
            </Tab>
        </tabs>
    </TabPane>
</VBox>