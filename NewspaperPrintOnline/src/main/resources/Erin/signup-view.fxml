<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.simulatingnewspaper.SignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="New User Registration" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Desired Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="User Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <ComboBox fx:id="userTypeCombo" promptText="Select Role" onAction="#onUserTypeChange" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>

    <GridPane fx:id="advertiserFieldsPane" hgap="10" vgap="10" style="-fx-border-color: lightgray; -fx-padding: 10;">
        <Label text="Company Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="companyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Contact Phone (Digits only):" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Register" onAction="#onRegisterButtonClick" />
        <Button text="Back to Login" onAction="#onBackToLoginClick" />
    </HBox>

    <Label fx:id="messageLabel" textFill="RED" />
</VBox>